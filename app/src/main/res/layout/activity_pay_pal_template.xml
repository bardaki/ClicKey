<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_pal_template"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c2c2c2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pp.com.clickey.PayPalTemplateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/labels_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/merchant_info_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#c2c2c2"
                android:text="Merchant Info"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchant_email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#c2c2c2"
                android:text="Merchant Email:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchant_first_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="First Name:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchant_last_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Last Name:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchant_business_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Business Name:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchant_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Merchant Address"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/street_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Street Address:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/city_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="City:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/state_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="State:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postal_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Postal Code:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/country_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Country:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Description"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Item Description:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#c2c2c2"
                android:text="Quantity: Will be always 1"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/labels_layout"
            android:orientation="vertical">

            <EditText
                android:id="@+id/merchant_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:background="#d6d6d6"
                android:hint="Merchant Email"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/merchant_first_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="First Name"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/merchant_last_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="Last Name"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/merchant_business_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="Business Name"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/street_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                android:background="#d6d6d6"
                android:hint="Street Address"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="City"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/state_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="State"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/postal_code_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="Postal Code"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/country_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:background="#d6d6d6"
                android:hint="Country"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_description_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="78dp"
                android:background="#d6d6d6"
                android:hint="Item Description"
                android:minWidth="300dp"
                android:padding="2dp"
                android:textSize="16sp" />

            <!--<EditText-->
            <!--android:id="@+id/item_quantity_txt"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:background="@android:color/holo_green_dark"-->
            <!--android:hint="Quantity"-->
            <!--android:inputType="number"-->
            <!--android:textSize="16sp" />-->

        </LinearLayout>

        <Button
            android:id="@+id/update_template_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labels_layout"
            android:gravity="center"
            android:text="Update Template"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

</ScrollView>
